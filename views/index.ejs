<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | Sree Charan</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans">
    <!-- Navigation -->
    <header class="fixed top-0 left-0 right-0 bg-white shadow-md z-50">
      <nav class="max-w-7xl mx-auto flex justify-between items-center p-4">
        <h1 class="text-xl font-bold">Sree Charan</h1>
        <ul class="flex gap-6 text-sm font-medium">
          <li><a href="/" class="hover:text-blue-600">Home</a></li>
          <li><a href="/about" class="hover:text-blue-600">About</a></li>
          <li><a href="/projects" class="hover:text-blue-600">Projects</a></li>
          <li><a href="/contact" class="hover:text-blue-600">Contact</a></li>
        </ul>
      </nav>
    </header>

    <!-- Hero Section -->
    <section class="pt-32 pb-24 bg-gradient-to-br from-blue-100 via-white to-purple-100">
      <div class="max-w-5xl mx-auto px-6 text-center" data-aos="fade-up">
        <h2 class="text-4xl sm:text-5xl font-extrabold mb-6">
          Hello, I'm <span class="text-blue-600">Sree Charan</span>
        </h2>
        <p class="text-lg sm:text-xl text-gray-700 max-w-3xl mx-auto mb-6">
          A Full Stack Developer passionate about building modern, responsive, and accessible web applications. 
        </p>
        <a
          href="/projects"
          class="mt-4 inline-block bg-blue-600 text-white px-6 py-3 rounded-full shadow-md hover:bg-blue-700 transition"
        >
          View My Work
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="text-center text-sm py-6 text-gray-500">
      &copy; <%= new Date().getFullYear() %> Sree Charan Shankupalle. All rights reserved.
    </footer>

    <script src="/js/script.js"></script>
    <script>
      AOS.init({ duration: 1000 });
    </script>
  </body>
</html>
